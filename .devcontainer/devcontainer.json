{
  "name": "Ubuntu",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "features": {
    "git": "latest",
    "node": "16"
  },
  "remoteEnv": {
    "SHELL": "/bin/zsh"
  },
  "settings": {
    "terminal.integrated.profiles.linux": {
      "zsh": {
        "path": "zsh",
        "args": ["-l"]
      }
    },
    "terminal.integrated.defaultProfile.linux": "zsh"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
